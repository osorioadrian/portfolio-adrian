---
interface SocialNetwork {
  title: string
  url: string
}

interface FooterLink {
  name: string
  href: string,
  active: boolean
}

interface Props {
  social: SocialNetwork[]
  links: FooterLink[]
}

const { social, links } = Astro.props as Props
---

<footer class="bg-[#181818] py-10 px-6 md:px-24 border-t border-white/5 relative overflow-hidden">
  
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-12">
    
    <nav class="flex items-center gap-6 md:gap-8">
      {links.map((link) => (
        <a 
          href={link.href}
          class={`text-sm transition-all duration-300 ${
            link.active 
            ? "bg-[#2A2A2A] px-5 py-2 rounded-full text-white shadow-lg" 
            : "text-gray-400 hover:text-white"
          }`}
        >
          {link.name}
        </a>
      ))}
    </nav>

    <div class="relative group">
      <span
        class="text-xl md:text-4xl font-light text-white tracking-tight hover:opacity-70 transition-opacity break-all md:break-normal"
      >
        osorioadriancamilo@gmail.com
      </span>
      <div class="absolute -bottom-2 left-0 w-0 h-px bg-white/20 transition-all duration-500 group-hover:w-full"></div>
    </div>

  </div>

  <div class="absolute inset-0 pointer-events-none opacity-[0.03]">
    <div class="absolute left-0 top-0 w-full h-full border-x border-white/20 mx-auto max-w-7xl"></div>
  </div>
  
  <div class="max-w-7xl mx-auto mt-20 pt-8 border-t border-white/5 flex justify-between text-[10px] text-gray-500 uppercase tracking-[0.2em]">
    <span>Â© 2026 ADRIAN OSORIO</span>
    <div class="flex gap-6">
      {social.map((social) => (
        <a 
          href={social.url} 
          target="_blank" 
          rel="noopener noreferrer" 
          class="hover:text-white transition-colors duration-300"
        >
          {social.title}
        </a>
      ))}
    </div>
  </div>
</footer>
